<modelComponent type="atmosphere" embedded="true" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 Z:\CIM\XSDs\software.xsd">
	<composition>
		<coupling complete="false" type="argument-passing">
			<description>Initialisation File</description>
			<lag units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</lag>
			<rate units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</rate>
			<!-- source needs to point to the initialisation file "xdhwda.dax2b10" in the data section. I assume some xlink/xpointer will be used at this point.-->
			<source xlink:href="Data/Initialisation_File"/>
			<!--  I assume this should be a link back to the Model component itself. xlink/xpointer? -->
			<target xlink:href="UM_Atmos.xml"/>
		</coupling>
		<coupling complete="false" type="argument-passing">
			<description>Snow Depth ancillary (Values should be extracted from Activity)</description>
			<lag units="seconds">
				<rate>0</rate>
			</lag>
			<rate units="days">
				<rate>0</rate>
			</rate>
			<source xlink:href="Data/SnowDepth_Ancillary_File"/>
			<target xlink:href="UM_Atmos.xml"/>
		</coupling>
		<coupling complete="false" type="argument-passing">
			<description>Ozone ancillary file (Values should be extracted from Activity)</description>
			<lag units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</lag>
			<rate units="days" xsi:type="Timing">
				<rate>30</rate>
			</rate>
			<source xlink:href="Data/Ozone_Ancillary_File"/>
			<target xlink:href="UM_Atmos.xml"/>
		</coupling>
		<coupling complete="false" type="argument-passing">
			<description>Soil Properties Ancillary file</description>
			<lag units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</lag>
			<rate units="days" xsi:type="Timing">
				<rate>0</rate>
			</rate>
			<source xlink:href="Data/Ozone_Ancillary_File"/>
			<target xlink:href="UM_Atmos.xml"/>
		</coupling>
		<description>From Data Files</description>
	</composition>
	<childComponent embedded="true">
		<description>Convection Scheme</description>
		<name>AtmosConvection</name>
		<!-- No need for numericalProperties and scientificProperties here-->
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<childComponent embedded="true">
		<description>Radiation Scheme</description>
		<name>General 2-stream radiation code</name>
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<childComponent embedded="true">
		<description>(3C) - Improved mixed phase precipitation scheme</description>
		<name>Large scale precipitation</name>
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<description>
		Atmosphere component of  HiGEM (vn 1.2)
	</description>
	<name>
		UM_Atmos
	</name>
	<numericalProperties>
		<!-- I'm unclear here as to what 'type' and 'represented' actually mean? -->
		<numericalProperty type="characteristic" represented="true">
			<name>AtmosAdvection</name>
			<value>Semi-Langrangian</value>
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>AtmosHorizontalDiffusion</name>
			<!-- TO BE COMPLETED -->
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>AtmosVerticalDiffusion</name>
			<!-- TO BE COMPLETED -->
		</numericalProperty>
	</numericalProperties>
	<scientificProperties>
		<scientificProperty type="prognostic">
			<name>Temperature</name>
			<description>3D temperature of the model atmosphere</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>U-velocity</name>
			<grid xlink:href="Xlink to grid structure"/>
			<description>3D U wind</description>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>V-velocity</name>
			<grid xlink:href="Xlink to grid structure"/>
			<description>3D U wind</description>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>U-velocity</name>
			<grid xlink:href="Xlink to grid structure"/>
			<description>3D U wind</description>
		</scientificProperty>
	</scientificProperties>
	<timing units="minutes" xsi:type="Timing">
		<!-- this is the atmospheric model timestep -->
		<rate>20</rate>
	</timing>
	<creationDate>
		<!-- Not sure which date creationDate actually refers to -->
		2009-04-01T13:47:00
	</creationDate>
	<documentID>
		<!-- To be decided how this is managed -->
	</documentID>
</modelComponent>
