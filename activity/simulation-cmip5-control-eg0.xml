<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <document>
        <uri> blah</uri>
        <name>UM Control Run for CMIP5</name>
        <author>Charlotte</author>
        <created>10 October</created>
        <lastModified>21 October</lastModified>
    </document>
    <name>abcde</name>
    <description> Pre-Industrial Control </description>
    <duration>
        <CloseDateRange>
            <perpetual type="years">
                <startDate>01-01-1850</startDate>
                <period unit="years">550</period>
            </perpetual>
        </CloseDateRange>
    </duration>
    <platform>
        <ComputingEnvironment>
            <!-- structure from other packages --> HPCX </ComputingEnvironment>
    </platform>
    <uses>
        <!-- This points to the uri of a document describing the configured model -->
        <uri>xxxx</uri></uses>
    <conformsTo>
        <!-- Use datasets (blaha, blahb) to conform to requirements bc1 and bc2 -->
        <conformance>
            <requirementURI>bc1</requirementURI>
            <datasetURI>blahA</datasetURI>
        </conformance>
        <conformance>
            <requirementURI>bc2</requirementURI>
            <datasetURI>blahB</datasetURI>
        </conformance>
        <!-- This one conforms to bc3 via a configured component described at uri "uabc" -->
        <conformance>
            <requirementURI>bc3</requirementURI>
            <componentURI>uabc</componentURI>
        </conformance>
    </conformsTo>
    <simulationCollection>
        <!-- Actualy, the UML should allow us either to inline or point out using xlink -->
        <simulation>
            <name>azaaa</name>
            <uri>azaaa</uri>
            <description>First Block of Requirement with specific temporal averaging</description>
            <duration>
                <perpetual type="years">
                    <startDate>01-01-1850</startDate>
                    <period unit="years">400</period>
                </perpetual>
            </duration>
            <output>
                <averaging>yearly</averaging>
            </output>
            <restartDumps>
                <DataSet>
                    <uri> blah </uri>
                </DataSet>
            </restartDumps>
            <spinup>
                <ClosedDateRange>
                    <perpetual type="years">
                        <startDate>01-01-1850</startDate>
                        <period unit="years">50</period>
                    </perpetual>
                </ClosedDateRange>
            </spinup>
        </simulation>
        <simulation>
            <name>azbb</name>
            <description>Second Block of requirement with specific temporal averaging</description>
            <duration>
                <perpetual type="years">
                    <startDate>01-01-1850</startDate>
                    <period unit="years">100</period>
                </perpetual>
            </duration>
            <output>
                <averaging>instananeous</averaging>
                <frequency>daily</frequency>
            </output>
            <restartDumps>
                <DataSet>
                    <uri> blah2 </uri>
                </DataSet>
            </restartDumps>
            <initialCondition>
                <DataSet>
                    <uri> blah3></uri>
                    <!-- And the dataset metadata should point back to being the final restart dump of azaa -->
                </DataSet>
            </initialCondition>
        </simulation>
    </simulationCollection>
</simulation>
